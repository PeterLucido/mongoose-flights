<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/forms.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline">Airline:</label>
    <select name="airline" id="airline">
      <option value="American">American</option>
      <option value="Southwest" selected >Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport">Airport:</label>
    <select name="airport" id="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected >DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo-input">Flight #:</label>
    <input type="text" name="flightNo" id="flightNo-input">
  
    <label for="date-imput">Date:</label>
    <input type="datetime-local" name="date" id="date-input">

    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>



